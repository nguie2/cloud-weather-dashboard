# Multi-Cloud Weather API Backend Environment Variables

# =============================================================================
# WEATHER API KEYS (for Lambda functions)
# =============================================================================

# OpenWeatherMap API Key
OPENWEATHER_API_KEY=your_openweather_api_key_here

# WeatherAPI.com API Key
WEATHER_API_KEY=your_weatherapi_key_here

# AccuWeather API Key
ACCUWEATHER_API_KEY=your_accuweather_api_key_here

# =============================================================================
# CLOUD PROVIDER CONFIGURATIONS
# =============================================================================

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_LAMBDA_URL=https://your-aws-lambda-url.amazonaws.com
AWS_API_KEY=your_aws_api_key

# Azure Configuration
AZURE_REGION=eastus
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_RESOURCE_GROUP=your_resource_group
AZURE_FUNCTION_APP_NAME=your_function_app_name
AZURE_API_URL=https://your-azure-function-app.azurewebsites.net

# Google Cloud Configuration
GCP_PROJECT_ID=your_gcp_project_id
GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
GCP_API_URL=https://your-gcp-cloud-run-url.run.app

# =============================================================================
# DATABASE CONNECTIONS
# =============================================================================

# DynamoDB (AWS)
DYNAMODB_TABLE=weather-data
DYNAMODB_REGION=us-east-1

# CosmosDB (Azure)
COSMOSDB_CONNECTION_STRING=your_cosmosdb_connection_string
COSMOSDB_DATABASE=weather-db
COSMOSDB_CONTAINER=weather-data

# Firestore (GCP)
FIRESTORE_PROJECT_ID=your_gcp_project_id
FIRESTORE_COLLECTION=weather-data

# =============================================================================
# AGGREGATION SERVICE
# =============================================================================

# Aggregation Lambda Configuration
AGGREGATION_LAMBDA_URL=https://your-aggregation-lambda-url.amazonaws.com
AGGREGATION_API_KEY=your_aggregation_api_key

# Cross-cloud sync settings
SYNC_INTERVAL_MINUTES=5
DATA_RETENTION_DAYS=30
CONSENSUS_THRESHOLD=0.8

# =============================================================================
# API SETTINGS
# =============================================================================

# API Configuration
NODE_ENV=development
LOG_LEVEL=info
ENABLE_METRICS=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# GitHub Actions (CI/CD)
GITHUB_TOKEN=your_github_token

# Slack Notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# API Security
API_SECRET_KEY=your_api_secret_key
JWT_SECRET=your_jwt_secret

# Encryption
ENCRYPTION_KEY=your_encryption_key_32_chars_long

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Error Tracking
SENTRY_DSN=your_sentry_dsn_here

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
METRICS_ENDPOINT=your_metrics_endpoint

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode Settings
DEBUG=false
MOCK_WEATHER_DATA=false
DISABLE_RATE_LIMITING=false

# Testing
TEST_LOCATION=New York, NY
TEST_API_TIMEOUT=5000

# Lambda Function Settings
LAMBDA_TIMEOUT=30
LAMBDA_MEMORY=512 